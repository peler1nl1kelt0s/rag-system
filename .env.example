# ===========================================
# RAG SYSTEM CONFIGURATION
# ===========================================

# === Kubernetes Configuration ===
CLUSTER_NAME=rag-cluster
ARGOCD_NS=argocd
APP_NS=rag-system
NVIDIA_NS=nvidia-device-plugin

# === GitHub Configuration ===
GITHUB_USER=peler1nl1kelt0s
GITHUB_REPO=rag-system
GITHUB_TOKEN=your_github_token_here

# === Container Registry Configuration ===
IMAGE_REGISTRY=ghcr.io
IMAGE_REPOSITORY=peler1nl1kelt0s
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest

# === Application Configuration ===
# Backend Configuration
QDRANT_URL=http://qdrant-service.rag-system.svc.cluster.local:6333
OLLAMA_URL=http://ollama-service.rag-system.svc.cluster.local:11434
MODEL_NAME=qwen
COLLECTION_NAME=apache_docs
DATA_PATH=/data/

# Frontend Configuration
BACKEND_URL=http://rag-backend-service.rag-system.svc.cluster.local:8000

# === Storage Configuration ===
QDRANT_STORAGE_SIZE=5Gi
QDRANT_STORAGE_CLASS=local-path

# === Resource Limits ===
# Ollama GPU Resources
OLLAMA_GPU_LIMIT=1
OLLAMA_MEMORY_LIMIT=4Gi
OLLAMA_CPU_LIMIT=2
OLLAMA_MEMORY_REQUEST=2Gi
OLLAMA_CPU_REQUEST=1

# Backend Resources
BACKEND_MEMORY_LIMIT=2Gi
BACKEND_CPU_LIMIT=1
BACKEND_MEMORY_REQUEST=1Gi
BACKEND_CPU_REQUEST=0.5

# Frontend Resources
FRONTEND_MEMORY_LIMIT=1Gi
FRONTEND_CPU_LIMIT=0.5
FRONTEND_MEMORY_REQUEST=512Mi
FRONTEND_CPU_REQUEST=0.25

# === Port Configuration ===
ARGOCD_PORT=8080
FRONTEND_PORT=8501
BACKEND_PORT=8000

# === Development Configuration ===
# Set to true for development mode
DEV_MODE=false
# Set to true to enable debug logging
DEBUG_MODE=false

# === Security Configuration ===
# ArgoCD admin password (will be generated if not set)
ARGOCD_ADMIN_PASSWORD=

# === Network Configuration ===
# Service type for external access (ClusterIP, NodePort, LoadBalancer)
SERVICE_TYPE=ClusterIP
# NodePort range (if using NodePort)
NODEPORT_RANGE=30000-32767
